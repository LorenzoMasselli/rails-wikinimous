<div class="article">
  <%= link_to "New Article", new_article_path, class: "link new_article" %>
  <p class="article-count"><span class="circle"></span><%= @articles.count %> Articles</p>
</div>

<div class="d-flex flex-column p-4 text-center">
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item al-list">
      <h4>
        <%= link_to article.title, article_path(article), class: "link" %>
      </h4>
      <p><%= article.content %></p>
      </li>
    <% end %>
  </ul>
</div>
